{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "[jupyter]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // Ruff settings
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.lint.run": "onSave",

    // Jupyter settings
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.generateSVGPlots": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.enableCellCodeLens": true,
    "jupyter.enablePlotViewer": true,
    "jupyter.themeMatplotlibPlots": true,
    "jupyter.pylanceLanguageServer": true,
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true
    },
    "notebook.output.textLineLimit": 100,

    // Testing settings
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],

    // File handling
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // File associations
    "files.associations": {
        "*.toml": "toml",
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*.ipynb": "jupyter-notebook"
    },

    // File exclusions
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/*.pyc": true,
        "**/.ipynb_checkpoints": true
    },

    // Documentation
    "autoDocstring.docstringFormat": "google",

    // Optional: Additional Jupyter settings
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
    "jupyter.exportWith": "nbconvert",
    "jupyter.notebookScrolling": true
}
